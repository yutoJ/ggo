<div class="row">
  <div class="col-md-3">
    <div class="text-center">
      <%= image_tag avatar_url(@user), class: "avatar-full" %>
      <% if current_user && current_user != @user %>
        <%= link_to "チャットで質問する", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, class: "btn btn-default" %>
      <% end %>
    </div>
    <br/>
    <div class="panel panel-default">
      <div class="panel-heading">Verification</div>
      <div class="panel-body">
        <ul class="sidebar-list">
          <!-- TODO fix it -->
          <li><i class="fa fa-volume-control-phone" aria-hidden="true"></i> 身分証明書<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% if @user.email %>
            <li><i class="fa fa-envelope-open-o" aria-hidden="true"></i> メール<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <!-- TODO fix it -->
          <li><i class="fa fa-facebook-square" aria-hidden="true"></i> Facebook<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% if @user.phone_number %>
            <li><i class="fa fa-volume-control-phone" aria-hidden="true"></i> 電話番号<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
        </ul>

      </div>
    </div>
  </div>
  <div class="col-md-9">
    <h2><%= @user.name %></h2>
    <div class="description row-space-3">
      <%= @user.introduction %>
    </div>

    <h4>あなたのガジェット (<%= @gadgets.length %>)</h4><br/>

    <div class="row">
      <%= render partial: "gadgets/gadgets_list", locals: {gadgets: @gadgets} %>
    </div>
    <br/>

    <hr />
    <h4>ゲストからのレビュー (<%= @guest_reviews.count %>)</h4>
    <div class="row">
      <%= render "reviews/guest_list" %>
    </div>
    <br/>
    <hr />
    <h4>ホストからのレビュー (<%= @owner_reviews.count %>)</h4>
    <div class="row">
      <%= render "reviews/owner_list" %>
    </div>

  </div>
</div>
