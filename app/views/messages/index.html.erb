<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag avatar_url(@other), class: "img-circle avatar-medium" %>
    <strong><%= @other.name %></strong>
    <%= link_to "View Profile", @other, class: "btn btn-default" %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Conversation with <%= @other.name %>
        <input type="hidden" id="conversation_id" value="<%= @conversation.id %>">
      </div>
      <div class="panel-body">
        <div class="container text-center">
          <%= form_for [@conversation, @conversation.messages.new], remote: true do |f| %>
            <div class="form-group">
              <%= f.text_field :body, placeholder: "メッセージを記入してください", class: "form-control" %>
            </div>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <div>
              <%= f.submit "メッセージ送信", class: "btn btn-normal" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div id="chat"><%= render @messages %></div>
  </div>
</div>
