<div class="row">
  <div class="col-md-3">
    <%= render 'gadget_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        レンタル料登録
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @gadget do |f| %>
            <div class="row">
              <div class="form-group">
                <label>価格 (円)</label>
                <%= f.text_field :price, placeholder: "例: 100", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
