<div class="row">
  <div class="col-md-8">
    <h1><%= @gadget.listing_name %></h1>
    <%= image_tag @gadget.cover_photo(:thumb), style: "width: 100%;", class: "img-rounded" %>
    <hr/>
  </div>
  <div class="col-md-4">
    <h2>ホスト</h2>
    <div class="text-center">
      <%= image_tag avatar_url(@gadget.user), class: "img-circle avatar-xlarge" %><br/><br/>
      <%= link_to @gadget.user.name, user_path(@gadget.user) %>
    </div>
    <hr />
      <%= @gadget.user.introduction %>
    <hr/>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <h2>紹介</h2>
    <%= @gadget.description %>
    <hr />
    <div class="row text-center row-space-1 text-babu">
      <div class="col-md-3">
        <i class="fa fa-jpy fa-2x" aria-hidden="true"></i></i>
      </div>
      <div class="col-md-3">
        <i class="fa fa-heart fa-2x" aria-hidden="true"></i>
      </div>
      <div class="col-md-3">
        <i class="fa fa-book fa-2x" aria-hidden="true"></i>
      </div>
      <div class="col-md-3">
        <i class="fa fa-play-circle-o fa-2x" aria-hidden="true"></i>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-md-3"><%= @gadget.price %>円/1日</div>
      <div class="col-md-3">保証あり</div>
      <div class="col-md-3">手順書あり</div>
      <div class="col-md-3">初期設定済み</div>
    </div>
    <div class="row text-center row-space-1 text-babu">
      <div class="col-md-3">
        <i class="fa fa-shopping-bag fa-2x" aria-hidden="true"></i></i>
      </div>
      <div class="col-md-3">
        <i class="fa fa-handshake-o fa-2x" aria-hidden="true"></i>
      </div>
      <div class="col-md-3">
        <i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i>
      </div>
      <div class="col-md-3">
        <i class="fa fa-calendar fa-2x" aria-hidden="true"></i>
      </div>
    </div>

    <div class="row text-center">
      <div class="col-md-3">専用バッグで配送</div>
      <div class="col-md-3">チャットサポート可</div>
      <div class="col-md-3">返却時アカウント削除</div>
      <div class="col-md-3">1H単位で受け取り可能</div>
    </div>
    <hr />
    <h2>配達範囲エリア</h2>
    <%= @gadget.address %>
    <hr/>


    <hr />
    <h2>キャンセルポリシー</h2>
    (サービス詳細掲載予定)
    <hr />
    <h2>保証</h2>
    (サービス詳細掲載予定)
    <hr />
    <br />
    <br />
  </div>

  <div class="col-md-4">
    <%= render 'reservations/form' %>
  </div>
</div>
