<div class="row">
  <div class="col-md-3">
    <%= render 'gadget_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        宅配
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @gadget do |f| %>
            <div class="row">
              <div class="form-group">
                <label>住所</label>
                <%= f.text_field :address, placeholder: "送り元住所", class: "form-control", required: true, id: "autoaddress" %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
$(function() {
  $("#autoaddress").geocomplete();
})
</script>
