$('#photos').html("<%= j render 'photos_list' %>")
<% if @gadget.photos.blank? %>
  $('#photo_check').hide();
<% end %>

<% if !@gadget.active && !@gadget.price.blank? && !@gadget.listing_name.blank? && !@gadget.photos.blank? && !@gadget.address.blank? %>
  $('#publish_button').attr('disabled', false);
<% else %>
  $('#publish_button').attr('disabled', true);
<% end %>
